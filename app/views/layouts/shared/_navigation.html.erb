<div class="navbar">
  <div class="navbar-inner">
    <%= link_to 'Kale', root_path, :class => "brand"%>
    <ul class="nav">
      <li class="<%= "active" if current_page?(root_path) %>"><%= link_to 'Home', root_path %></li>
      <li class="<%= "active" if current_page?(items_path) %>"><%= link_to 'Items', items_path %></li>
        <% if logged_in? %>
          <li class="<%= "active" if params[:controller] == 'my/lists' %>"><%= link_to "My List", '/my/list' %></li>
        <% end %>
    </ul>
    <div class="nav pull-right">
      <% unless logged_in? %>
        <%= link_to "Log in", login_path, :class => "btn btn-primary" %>
        <%= link_to "Sign up", signup_path, :class => "btn btn-primary" %>
      <% else %>
        <span class="muted"><small>Logged in as <%= current_user.email %></small></span>
        <%= link_to "Log out", logout_path, :class => "btn btn-inverse" %>
      <% end %>
    </div>
  </div>
</div>